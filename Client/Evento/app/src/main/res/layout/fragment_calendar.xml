<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/calendar_base_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_date_height">

        <Button
            android:layout_width="@dimen/calendar_button_width"
            android:layout_height="match_parent"
            android:text="@string/prev"
            android:id="@+id/prevButton" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/dayTitle"
            android:layout_weight="5"
            android:gravity="center"/>

        <Button
            android:layout_width="@dimen/calendar_button_width"
            android:layout_height="match_parent"
            android:text="@string/next"
            android:id="@+id/nextButton" />

    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_grid_view_height"
        android:numColumns="7"
        android:verticalSpacing="@dimen/calendar_grid_view_spacing"
        android:horizontalSpacing="@dimen/calendar_grid_view_spacing"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_gravity="top|center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar_list_event"/>

</LinearLayout>
