<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/createEvent_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0" />

    <TextView
        android:id="@+id/event_creator_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/createEvent_creator"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventPictureView"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eventFrag_from"
        android:id="@+id/startDateText"
        android:layout_column="0"
        android:layout_row="3" />

    <TextView
        android:id="@+id/event_start_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createEvent_startDate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eventFrag_to"
        android:id="@+id/endDateText"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="4" />

    <TextView
        android:id="@+id/event_end_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createEvent_endDate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eventFrag_at"
        android:id="@+id/addressText"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="5" />

    <TextView
        android:id="@+id/event_address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createEvent_address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eventFrag_tags"
        android:id="@+id/tagsText"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="6" />

    <TextView
        android:id="@+id/event_tags_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createEvent_tags"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="6" />

    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/eventFrag_description"
        android:id="@+id/descriptionText"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="7" />

    <TextView
        android:id="@+id/event_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_weight="0.15"
        android:text="@string/createEvent_description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_row="7"
        android:layout_columnSpan="1"
        android:layout_column="1" />

    <TextView
        android:id="@+id/participantView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participantView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="@string/createEvent_participant"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listParticipantView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eventFragment_join"
        android:id="@+id/joinEvent"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="8" />

</GridLayout>
